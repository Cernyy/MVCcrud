@model Category

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Edit Category</h2>
            <hr/>
    </div>
    <input asp-for="Name" class="col form-control m-2" placeholder="Name"/>
    <span asp-validation-for="Name" class="text-danger"></span>
    <input asp-for="DisplayOrder" class="col form-control m-2" placeholder="DisplayOrder"/>
    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    <div class="row">
    <div class="m-2">
        <button type="submit" class="btn btn-primary col" style="width:150px">Edit</button>
        <a class="col btn btn-outline-danger asp-controller="Category" asp-action="Index" style="width:150px">Back to List</a>
    </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
   
}
